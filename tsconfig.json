{
  "compilerOptions": {
    "module": "commonjs",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "lib": ["es2022"],
    "strict": true,
    "target": "es2022",
    "sourceMap": true,
    "outDir": "./dist",
    "incremental": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "paths": {
      "@prisma/dashboard": ["./node_modules/.prisma/generated/dashboardClient"],
      "@prisma/reporting": ["./node_modules/.prisma/generated/reportingClient"]
    }
  }
}
